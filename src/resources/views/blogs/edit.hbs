<div class="mt-4 text-light">
  <h3 class="text-light">Blog Update</h3>
  <form class="mt-4" method="POST" action="/blogs/{{blog._id}}?_method=PUT">
    <div class="form-group mt-2">
      <label for="name">Blog Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{blog.name}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="description">Blog Descriptions</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        value="{{blog.description}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        value="{{blog.videoId}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="image">Link Image</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="image"
        value="{{blog.image}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        value="{{blog.level}}"
      />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Update</button>
  </form>
</div>